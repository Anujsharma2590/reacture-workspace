{
  "compilerOptions": {
    "jsx": "react-jsx",               // Use React's new automatic JSX runtime
    "jsxImportSource": "@emotion/react",
    "target": "ES5",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
